{
    "key": "solr",
    "description": "Solr 4.6 intended for use with Dataverse",
	"access": "internal",
    "label": "Solr",
    "image": "ndslabs/dataverse-solr:latest",
    "ports": [
        { "port": 8983, "protocol": "http" }
    ],
    "volumeMounts":[
        { "mountPath": "/usr/local/solr-4.6.0/example/solr/collection1/data", "name": "solr" }
    ],
    "readinessProbe" : {
        "type" : "http",
        "path" : "/solr",
        "port" : 8983,
        "initialDelay": 30,
        "timeout" : 600
    },
    "resourceLimits": {
        "cpuMax": "1",
        "cpuDefault": "100m",
        "memMax": "500Mi",
        "memDefault": "200Mi"
    }
}
